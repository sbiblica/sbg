<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
<template id="report_invoice">
    <t t-call="report.html_container">
     <t t-foreach="docs" t-as="o">
        <t t-set="style" t-value="o.style or res_company.default_style or user.env.ref('professional_templates.default_style_for_all_reports')"/>
        <t t-if="style">
            <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', style.template_inv.xml_id)"/>
        </t>
        <t t-if="not style">
            <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', 'account.report_invoice_document')"/>
        </t>
     </t>
    </t>
</template>
<template id="report_duplicate">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-set="style" t-value="o.style or res_company.default_style or user.env.ref('professional_templates.default_style_for_all_reports')"/>
            <t t-if="style">
	      <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', style.template_inv.xml_id.replace('document', 'duplicate'))"/>
            </t>
           <t t-if="not style">
              <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', 'professional_templates.odoo_duplicate')"/>
           </t>
     </t>
    </t>
</template>
</data>
</openerp>
