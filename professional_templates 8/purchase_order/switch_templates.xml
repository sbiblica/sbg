<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
<template id="purchase_order">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-set="style" t-value="o.po_style or res_company.default_style or user.env.ref('professional_templates.default_style_for_all_reports')"/>
            <t t-if="style">
                <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', style.template_po.xml_id)"/>
            </t>
            <t t-if="not style">
                <t t-raw="translate_doc(o.id, doc_model, 'partner_id.lang', 'purchase.report_purchaseorder_document')"/>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
