<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="generate_centro_costos_wizard" model="ir.ui.view">
            <field name="name">Genera Venta a Excel</field>
            <field name="model">sbg_centro_costos.generate_centro_costos</field>
            <field name="arch" type="xml">
                <form string="Generate file">
                    <field invisible="1" name="state"/>
                    <field name="name" invisible="1"/>
                    <group states="choose" string="Selección de Año Y centro de costo">
                        <h2>para generar el archivo</h2>
                        <field name="anio" required="1" />
                        <field name="account_id" required="1" options="{'no_create': True}" />

                    </group>
                    <div states="choose">
                        <p>aqui es generado el archivo : <field name="data" readonly="1" filename="name"/></p>
                    </div>
 
                    <div states="get">
                        <h2>Generacion completa</h2>
                        <p>Click aqui para abrir : <field name="data" readonly="1" filename="name"/></p>
                    </div>
                    <footer states="choose">
                        <button name="generate_file" string="Generate file" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
 
                </form>
            </field>
        </record>

        <record id="generate_centro_costos_action" model="ir.actions.act_window">
            <field name="name">Genera centro_costos a Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbg_centro_costos.generate_centro_costos</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



        <menuitem
            name="Reporte de Centro Costos"
            action="generate_centro_costos_action"
            id="generate_centro_costos_menu"
            parent="account.menu_finance_reporting"
            sequence="100"
        />


    </data>
</openerp>

