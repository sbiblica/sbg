<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="sbg_subscription_statement_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">

                        <h2>
                        Subscription statement
                        </h2>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Customer</strong></th>
                                    <th><strong>Start date</strong></th>
                                    <th><strong>End date</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-esc="docs.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs.start_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs.end_date"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Date</strong></th>
                                    <th><strong>Description</strong></th>
                                    <th class="text-right"><strong>Debits</strong></th>
                                    <th class="text-right"><strong>Credits</strong></th>
                                    <th class="text-right"><strong>Balance</strong></th>
                                </tr>
                            </thead>
                            <tr t-foreach="docs.detail_ids" t-as="line">
                                <td><span t-esc="line['date']"/></td>
                                <td><span t-esc="line['name']"/></td>
                                <td class="text-right"><span t-esc="line['debit']"/></td>
                                <td class="text-right"><span t-esc="line['credit']"/></td>
                                <td class="text-right"><span t-esc="line['balance']"/></td>
                            </tr>
                        </table>
                    </div>
                </t>
                </t>
             </t>
        </template>

        <report
            string="Print statement"
            id="sbg_print_statement_action"
            model="sbg.subs.wizard.stmt.head"
            report_type="qweb-pdf"
            name="sbg_subscriptions.sbg_subscription_statement_template"
            file="sbg_subscriptions.sbg_subscription_statement_template"
        />

    </data>
</openerp>